<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:fadingEdge="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--    1st -->

        <ImageView
            android:id="@+id/iv_home_ex1"
            style="@style/DefaultMargin"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_home_ex1"
            app:layout_constraintEnd_toStartOf="@id/tv_home_ex1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_home_ex1"
            tools:ignore="ContentDescription"
            app:layout_constraintHorizontal_weight="1"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_home_ex1"
            style="@style/TextViewDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_home_ex2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_home_ex1"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/title_home_ex_placeholder" />

        <!--    2nd -->

        <ImageView
            android:id="@+id/iv_home_ex2"
            style="@style/DefaultMargin"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_home_ex2"
            app:layout_constraintEnd_toStartOf="@id/tv_home_ex2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_home_ex2"
            tools:ignore="ContentDescription"
            app:layout_constraintHorizontal_weight="1"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_home_ex2"
            style="@style/TextViewDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_home_ex3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_home_ex2"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_ex1"
            app:layout_constraintHorizontal_weight="2"
            tools:text="@string/title_home_ex_placeholder" />

        <!--    3rd -->

        <ImageView
            android:id="@+id/iv_home_ex3"
            style="@style/DefaultMargin"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_home_ex3"
            app:layout_constraintEnd_toStartOf="@id/tv_home_ex3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_home_ex3"
            app:layout_constraintHorizontal_weight="1"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_home_ex3"
            style="@style/TextViewDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_home_ex4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_home_ex3"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_ex2"
            app:layout_constraintHorizontal_weight="2"
            tools:text="@string/title_home_ex_placeholder" />

        <!--    4th -->

        <ImageView
            android:id="@+id/iv_home_ex4"
            style="@style/DefaultMargin"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_home_ex4"
            app:layout_constraintEnd_toStartOf="@id/tv_home_ex4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_home_ex4"
            tools:ignore="ContentDescription"
            app:layout_constraintHorizontal_weight="1"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_home_ex4"
            style="@style/TextViewDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_home_ex5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_home_ex4"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_ex3"
            tools:text="@string/title_home_ex_placeholder" />

        <!--    5th -->

        <ImageView
            android:id="@+id/iv_home_ex5"
            style="@style/DefaultMargin"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_home_ex5"
            app:layout_constraintEnd_toStartOf="@id/tv_home_ex5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_home_ex5"
            tools:ignore="ContentDescription"
            app:layout_constraintHorizontal_weight="1"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_home_ex5"
            style="@style/TextViewDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_home_ex5"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_ex4"
            app:layout_constraintHorizontal_weight="2"
            tools:text="@string/title_home_ex_placeholder" />

        <View
            android:id="@+id/fix_scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_home_ex5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>