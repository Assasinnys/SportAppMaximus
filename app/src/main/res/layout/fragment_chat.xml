<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.ChatFragment">

    <ImageButton
        android:id="@+id/img_btn_trainer_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_trainer_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_btn_user_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_trainer_chat"
        tools:ignore="ContentDescription"/>

    <ImageButton
        android:id="@+id/img_btn_user_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_participant_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_btn_trainer_chat"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_participant_chat"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/text_btn_trainer_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat with a coach"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_btn_trainer_chat"
        app:layout_constraintEnd_toEndOf="@+id/img_btn_trainer_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <TextView
        android:id="@+id/text_btn_user_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Chat with \n participants"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_btn_trainer_chat"
        app:layout_constraintTop_toTopOf="@+id/img_btn_user_chat"
        app:layout_constraintVertical_bias="0.81" />


</androidx.constraintlayout.widget.ConstraintLayout>