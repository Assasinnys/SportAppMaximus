<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Программа тренировок для набора мышечной массы — это базовая тренировочная программа, предназначенная для того, чтобы нарастить общий мышечный объем.

Упражнения со свободным весом, а также с гантелями и штангой — основа программы по набору мышечной массы. Сюда относят: приседания, выпады, тяги, жимы. Любая программа тренировок на мышечную массу обязательно должна включать четкий график упражнений, сбалансированное питание и достаточное время на восстановление.

Для набора массы число повторений в подходе должно быть 6—12. Тренировки — 3 раза в неделю, и обязательно восстановление, в первую очередь, хороший сон."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputEditText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_personal_information"
                style="@style/TextInputLayoutStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:text="Открыта к эксперементам )"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/avatarImageView" />

            <ImageView
                android:id="@+id/avatarImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/profile"
                tools:src="@tools:sample/avatars"
                tools:srcCompat="@drawable/p1" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="26dp"
                android:layout_toRightOf="@+id/avatarImageView"
                android:gravity="center"
                android:text="@string/name"
                app:layout_constraintStart_toEndOf="@+id/avatarImageView"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <EditText
                android:id="@+id/nameEditTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/nameTextView"
                android:gravity="center"
                android:text="Ирина"
                app:layout_constraintStart_toEndOf="@+id/nameTextView"
                app:layout_constraintTop_toBottomOf="@+id/tf_personal_information" />

            <TextView
                android:id="@+id/surnameTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@+id/nameTextView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/avatarImageView"
                android:gravity="center"
                android:text="@string/surname"
                app:layout_constraintStart_toEndOf="@+id/avatarImageView"
                app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

            <EditText
                android:id="@+id/surnameEditTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/surnameTextView"
                android:gravity="center"
                android:text="Телеш"
                app:layout_constraintStart_toEndOf="@+id/surnameTextView"
                app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

            <TextView
                android:id="@+id/ageTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@+id/surnameTextView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/avatarImageView"
                android:gravity="center"
                android:text="@string/age"
                app:layout_constraintStart_toEndOf="@+id/avatarImageView"
                app:layout_constraintTop_toBottomOf="@+id/surnameTextView" />

            <EditText
                android:id="@+id/ageEditTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/ageTextView"
                android:gravity="center"
                android:text="23"
                app:layout_constraintEnd_toStartOf="@+id/surnameEditTextView"
                app:layout_constraintStart_toEndOf="@+id/ageTextView"
                app:layout_constraintTop_toBottomOf="@+id/surnameTextView" />

            <TextView
                android:id="@+id/verifiedTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@+id/ageTextView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/avatarImageView"
                android:gravity="center"
                android:text="@string/verified"
                app:layout_constraintStart_toEndOf="@+id/avatarImageView"
                app:layout_constraintTop_toBottomOf="@+id/ageTextView" />

            <EditText
                android:id="@+id/verifiedEditTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/verifiedTextView"
                android:gravity="center"
                android:text="Да"
                app:layout_constraintStart_toEndOf="@+id/verifiedTextView"
                app:layout_constraintTop_toBottomOf="@+id/ageTextView" />


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Места тренеровок"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:srcCompat="@drawable/google_map" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.core.widget.NestedScrollView>